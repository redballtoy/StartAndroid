<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".XML_MenuCreateActivity">

    <TextView
        android:id="@+id/tvHeaderXMLActivity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="This Is Activity With XML created Menu"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.01999998" />

    <CheckBox
        android:id="@+id/ch_showGroup0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Show group 0 menu"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.16"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvHeaderXMLActivity"
        app:layout_constraintVertical_bias="0.04000002" />

    <CheckBox
        android:id="@+id/ch_showGroup1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Show group 1 menu"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/ch_showGroup0"
        app:layout_constraintTop_toBottomOf="@+id/ch_showGroup0"
        app:layout_constraintVertical_bias="0.01999998" />

    <CheckBox
        android:id="@+id/ch_showGroup2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Show group 2 menu"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/ch_showGroup1"
        app:layout_constraintTop_toBottomOf="@+id/ch_showGroup1"
        app:layout_constraintVertical_bias="0.01999998" />

    <TextView
        android:id="@+id/tv_show_info_menu_item_xml"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Show Information about item menu:"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/ch_showGroup2"
        app:layout_constraintTop_toBottomOf="@+id/ch_showGroup2"
        app:layout_constraintVertical_bias="0.060000002" />
</androidx.constraintlayout.widget.ConstraintLayout>