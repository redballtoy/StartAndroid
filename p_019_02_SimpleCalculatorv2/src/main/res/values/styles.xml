<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="buttonStyle">
        <item name="android:textSize">@dimen/textSize</item>
        <item name="android:textColor">@color/buttonTextColor</item>
        <item name="android:background">@drawable/ic_calcbutton_2</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingRight">8dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_height">@dimen/buttonHeight</item>
        <item name="android:layout_width">@dimen/buttonWidth</item>
    </style>
    <style name="buttonOrangeStyle">
        <item name="android:textSize">@dimen/textSize</item>
        <item name="android:textColor">@color/buttonTextColor</item>
        <item name="android:background">@drawable/ic_calcbuttonorange</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingRight">8dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_height">@dimen/buttonHeight</item>
        <item name="android:layout_width">@dimen/buttonWidth</item>
    </style>

</resources>