        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/tv_m_sqr"
        app:layout_constraintTop_toTopOf="@+id/tv_9" />

    <TextView
        android:id="@+id/tv_righ_skobka"
        style="@style/buttonStyle"
        android:clickable="true"
        android:fontFamily="sans-serif-thin"
        android:text=")"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/tv_m_plus"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_left_scobka"
