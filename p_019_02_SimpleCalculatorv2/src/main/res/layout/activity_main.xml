        style="@style/buttonStyle"
        android:clickable="true"
        android:fontFamily="sans-serif-thin"
        android:text="MC"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/tv_m_plus"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_display"
        app:layout_constraintVertical_bias="0.060000002" />

    <TextView
        android:id="@+id/tv_m_plus"
        style="@style/buttonStyle"
        android:clickable="true"
        android:fontFamily="sans-serif-thin"
        android:text="M+"
        app:layout_constraintBottom_toBottomOf="@+id/tv_m_c"
        app:layout_constraintEnd_toStartOf="@+id/tv_m_minus"
